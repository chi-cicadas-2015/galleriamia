<div class="col-sm-1"></div>
<div class="col-sm-10">
  <h1>Add a Piece to '<%=@collection.name%>'</h1>

  <div>
    <% if @errors %>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="new-piece-form ">
      <%= form_for :piece, url: user_collection_pieces_path(@user.id, @collection.id), method: :post, :html => { :multipart => true } do |f| %>

        <%= render partial: 'form', locals: { f: f } %>

        <div>
          <%= f.file_field :photo %>
        </div>


        <div>
          <%= f.submit "Add Piece", class: "custom-button" %>
        </div>


      <% end %>
    </div>
  </div>
</div>
<div class="col-sm-1"></div>
