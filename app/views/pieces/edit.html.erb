<h1>Edit Piece</h1>


<div>
  <%= image_tag @piece.photo.url(:thumb) %>
  <div>
    <%= form_for :piece, url: user_collection_piece_path(@user.id, @collection.id, @piece.id), method: :patch, :html => { :multipart => true } do |f| %>

    <div>
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>

    <div>
      <h5>Year</h5>
      <%= f.text_field :year %>
    </div>

    <div>
      <h5>Medium</h5>
     <%= f.text_field :medium %>
    </div>

    <div>
      <h5>Dimensions</h5>
      <%= f.text_field :size %>
    </div>

    <div>
      <h5>Remarks</h5>
      <%= f.text_area :description %>
    </div>


    <div>
      <%= f.submit "Save Piece", class: "custom-button" %>
    </div>

    <% end %>
  </div>
</div>
