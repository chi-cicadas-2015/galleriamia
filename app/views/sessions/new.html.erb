<div class="container">

  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="signup-form">
    <%= form_for :session do |f| %>

      <div>
        <%= f.label :email, "Email" %><br>
        <%= f.email_field :email, required: true %>
      </div>

      <div>
        <%= f.label :password, "Password" %><br>
        <%= f.password_field :password, required: true %>
      </div>

      <div>
        <%= f.submit %>
      </div>

    <% end %>
  </div>

</div>
