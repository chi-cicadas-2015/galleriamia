<div class="container">

  <div class="results-header">
    <h2>Search results for '<%=@query%>'</h2>
  </div>

  <div class="artist-results">
    <% if @artist_results %>
      <h4>Artists</h4>
      <% @artist_results.each do |artist| %>
        <%= link_to artist.name, user_path(artist.id) %><br>
      <% end %>
    <% end %>
  </div>

  <div class="collection-results">
    <% if @collection_results %>
      <h4>Collections</h4>
      <% @collection_results.each do |collection| %>
        <%= link_to collection.name, user_path(collection.user.id) %><br>
      <% end %>
    <% end %>
  </div>


