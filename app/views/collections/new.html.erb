<div class="container">

  <h1>Add a Collection</h1>

  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="new-collection-form">
    <%= form_for :collection, url: user_collections_path, :html => { :multipart => true } do |f| %>

      <%= render 'form', locals: { f: f } %>

    <% end %>
  </div>
</div>
