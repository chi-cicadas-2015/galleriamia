<div class="container">

  <div class="artist-header">
    <h1><%=@artist.name%></h1>
    <%= image_tag @artist.avatar.url(:thumb) %>
  </div>

  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#test1">Collections</a></li>
        <li class="tab col s3 "><a href="#test2">About</a></li>
        <li class="tab col s3"><a href="#test3">Events</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
      <ul class="collapsible" data-collapsible="expandable">
        <% @collections.each do |collection| %>
           <li>
             <div class="collapsible-header">
               <%= collection.name %>

               <% if current_user && current_user.id == @artist.id %>
                 <%= link_to "Edit", edit_user_collection_path(@artist.id, collection.id), method: :get %>
                 <%= link_to "Delete", user_collection_path(@artist.id, collection.id), method: :delete %>
               <% end %>
             </div>
             <div class="collapsible-body">
              <p>
                <% collection.pieces.each do |piece| %>
                  <%= link_to image_tag(piece.photo.url(:thumb)), user_collection_piece_path(@artist.id, collection.id, piece.id) %>
                <% end %>
              </p>
           </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div id="test2" class="col s12">
      <div>
        <div>EMAIL: <%= @artist.email %></div>
        <div>STATEMENT: <%= @artist.statement %></div>
        <div>MEMBER SINCE: <%= @artist.created_at.strftime("%B %-d, %Y") %></div>
      </div>
    </div>
    <div id="test3" class="col s12"> Come to my show </div>
  </div>

  <% if current_user && current_user.id == @artist.id %>
    <div class="add-collection">
      <%= link_to "Add a collection", new_user_collection_path(@artist.id) %>
    </div>
  <% end %>

</div>
