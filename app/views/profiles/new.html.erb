<div class="container">

  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="new-profile-form">
    <%= form_for :profile, url: artist_details_user_path(@user), :html => { :multipart => true } do |f| %>

      <div>
        <h5>Top Collection</h5>
        <%= f.text_field :top_collection %>
      </div>

      <div>
        <h5>Website URL</h5>
        <%= f.text_field :website_url %>
      </div>

      <div>
        <h5>Primary Medium</h5>
        <%= f.text_field :primary_medium %>
      </div>

      <div>
        <h5>Choose Your Headshot</h5>
        <%= f.file_field :headshot %>
      </div>

      <div>
        <%= f.submit class: "custom-button"%>
      </div>

    <% end %>
  </div>

</div>
