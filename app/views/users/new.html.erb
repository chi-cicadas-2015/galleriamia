<div class="container">

  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="new-user-form">
    <%= form_for :user, url: users_path, :html => { :multipart => true } do |f| %>

      <div>
        <h5>Name</h5>
        <%= f.text_field :name, required: true %>
      </div>

      <div>
        <h5>Email</h5>
        <%= f.email_field :email, required: true %>
      </div>

      <div>
        <h5>Password</h5>
        <%= f.password_field :password, required: true %>
      </div>

      <div>
        <h5>Choose an Avatar</h5>
        <%= f.file_field :avatar %>
      </div>

      <div>
        <%= check_box_tag :artist %>
        <%= label_tag :artist, "Sign up as an artist" %>
      </div>

      <div>
        <%= f.submit class: "custom-button" %>
      </div>

    <% end %>
  </div>

</div>
