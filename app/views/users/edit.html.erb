<h1>the user's edit page</h1>

<div>
  <%= @user.name %>
  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form_for :user, url: user_path(@user), method: :patch do |f| %>

      <div>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email, "Email" %><br>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :statement, "Statement" %><br>
        <%= f.text_field :statement %>
      </div>

      <div>
        <%= f.label :password, "Enter Your Password to Save Changes" %><br>
        <%= f.password_field :password %>
      </div>

      <% if @user.artist? %>

        <%= f.fields_for :profile do |builder| %>

          <div>
            <%= builder.label :top_collection, "Top Collection" %><br>
            <%= builder.text_field :top_collection %>
          </div>

        <% end %>

      <% end %>

      <div>
        <%= f.submit %>
      </div>

    <% end %>
  </div>

</div>