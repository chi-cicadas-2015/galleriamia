<h1>the user's edit page</h1>

<div>
  <%= @user.name %>
  <% if @errors %>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form_for :user, url: user_path(@user), method: :patch do |f| %>

      <div>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email, "Email" %><br>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :statement, "Statement" %><br>
        <%= f.text_field :statement %>
      </div>

      <% if @user.artist? %>
        <%= f.fields_for :profile_attributes, @user.profile do |builder| %>

          <div>
            <%= builder.label :top_collection, "Top Collection" %><br>
            <%= builder.text_field :top_collection %>
          </div>

          <div>
            <%= builder.label :website_url, "Website URL" %><br>
            <%= builder.text_field :website_url %>
          </div>

          <div>
            <%= builder.label :primary_medium, "Primary Medium" %><br>
            <%= builder.text_field :primary_medium %>
          </div>
        <% end %>
      <% end %>

      <div>
        <%= f.label :password, "Password" %><br>
        <%= f.password_field :password, placeholder: "Enter a new password here"%>
      </div>

      <div>
        <%= f.label :password_confirmation, "Password Confirmation" %><br>
        <%= f.password_field :password_confirmation, placeholder: "Confirm your changed password" %>
      </div>

      <div>
        <%= f.submit %>
      </div>

    <% end %>
  </div>

</div>