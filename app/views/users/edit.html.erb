<div class="col-sm-1"></div>
<div class="col-sm-10">
  <h1>Edit Profile</h1>

  <div>
    <% if @errors %>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= form_for :user, url: user_path(@user), method: :patch do |f| %>

        <div>
          <h5>Name</h5>
          <%= f.text_field :name %>
        </div>

        <div>
          <h5>Email</h5>
          <%= f.email_field :email %>
        </div>

        <div>
          <h5>Statement</h5>
          <%= f.text_field :statement %>
        </div>

        <div>
          <h5>Avatar</h5>
          <%= f.file_field :avatar %>
        </div>

        <% if @user.artist? %>
          <%= f.fields_for :profile_attributes, @user.profile do |builder| %>

            <div>
              <h5>Top Collection</h5>
              <%= builder.text_field :top_collection %>
            </div>

            <div>
              <h5>Website URL</h5>
              <%= builder.text_field :website_url %>
            </div>

            <div>
              <h5>Primary Medium</h5>
              <%= builder.text_field :primary_medium %>
            </div>

            <div>
              <h5>Headshot</h5>
              <%= builder.file_field :headshot %>
            </div>
          <% end %>
        <% end %>

        <div>
          <h5>Password</h5>
          <%= f.password_field :password, placeholder: "Enter a new password here"%>
        </div>

        <div>
          <h5>Password Confirmation</h5>
          <%= f.password_field :password_confirmation, placeholder: "Confirm your changed password" %>
        </div>

        <div>
          <%= f.submit "Save Changes", class: "custom-button" %>
        </div>

      <% end %>
    </div>

  </div>
</div>
<div class="col-sm-1"></div>
