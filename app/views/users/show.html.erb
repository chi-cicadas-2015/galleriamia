<body id="show">
<div class="container">
  <div class="user-header">
    <h1><%=@user.name%></h1>
    <%= image_tag @user.avatar.url(:thumb) %><br>
    <% if @user.artist? %>
      <%= image_tag @user.profile.headshot.url(:thumb) %>
    <% end %>
  </div>

  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#test1">Collections</a></li>
        <li class="tab col s3 "><a href="#test2">About</a></li>
        <li class="tab col s3"><a href="#test3">Events</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
      <ul class="collapsible" data-collapsible="expandable">
        <% @collections.each do |collection| %>
           <li>
             <div class="collapsible-header">

                 <%= collection.name %>

                <% if current_user && current_user.id == @user.id %>
                   <button class="secondary-content btn-xs settings"><%= link_to "Edit", edit_user_collection_path(@user.id, collection.id), method: :get %></button>
                <% end %>
             </div>
             <div class="collapsible-body">
                <% collection.pieces.each do |piece| %>

                  <%= link_to image_tag(piece.photo.url(:thumb)), user_collection_piece_path(@user.id, collection.id, piece.id) %>

                <% end %>
            </div>
          </li>
        <% end %>
      </ul>
      <% if current_user && current_user.id == @user.id %>
        <div class="add-collection">
          <a href="<%=new_user_collection_path(@user.id)%>"><i id="add" class="medium material-icons">library_add</i></a>
        </div>
      <% end %>
    </div>
    <div id="test2" class="col s12">
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">My Statement</span>
              <p><%= @user.statement %></p>

            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div>Email: <%= @user.email %></div>
        <% if @user.artist? %>
          <div>Name: <%= @user.name %></div>
          <div>Primary Medium: <%= @user.profile.primary_medium %></div>
          <div>Website: <%= @user.profile.website_url %></div>
          <div>Headshot: <%= image_tag @user.profile.headshot.url(:thumb) %></div>
        <% end %>
        <div>Member Since: <%= @user.created_at.strftime("%B %-d, %Y") %></div>
        <% if current_user && current_user.id == @user.id %>
          <%= link_to 'Edit Settings', edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
    <div id="test3" class="col s12"> Come to my show </div>
  </div>

</div>
</body>
